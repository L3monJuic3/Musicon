<div class="container">
  <h2>Create account</h2>
    <div class="mb-2">
      <%= link_to new_session_path(resource_name), class: "account-login" do %>
    <span class="account-login">Already a student?</span><strong class="login-word"> Login here</strong> <br />
      <% end %>
    </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="form-inputs rounded-4">
        <div class="d-flex rounded-4">
        <div class="col-6 pe-2 rounded-4">
        <%= f.input :first_name,
                    required: true,
                    autofocuse: true%>
        </div>
        <div class="col-6 ps-2">
        <%= f.input :last_name,
                    autofocuse: true%>
        </div>
        </div>

        <div class="d-flex">
          <div class="col-6 pe-2">
          <%= f.input :phone_number,
                      required: true,
                      autofocuse: true%>
          </div>
          <div class="col-6 ps-2">
          <%= f.input :address,
                      required: true,
                      autofocuse: true%>
          </div>
        </div>

        <%= f.input :date_of_birth,
                    required: true,
                    autofocuse: true%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
    </div>

    <div class="form-actions row justify-content-center p-2">
      <%= f.button :submit, "Sign up", class: "btn btn-primary rounded-4 col-12"%>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
